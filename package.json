{
	"name": "rollup-mpa",
	"version": "1.0.0",
	"description": "A starter template for web applications using Rollup as a module bundler",
	"scripts": {
		"clear": "rm -rf dist",
		"start": "export NODE_ENV=development && yarn clear && rollup -c -w",
		"build": "export NODE_ENV=production && yarn clear && rollup -c",
		"lint": "yarn lint:js && yarn lint:ts && yarn lint:css",
		"lint:js": "eslint './src/**/*.js'",
		"lint:ts": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'",
		"lint:css": "stylelint src/**/*.scss",
		"pwa": "create-pwa --icon=\"./src/images/favicon/icon.png\" --launch=\"./src/images/favicon/launch.png\"",
		"optisize": "optisize --src=\"./src/images\"",
		"html": "php index.php > index.html",
		"critical": "critical index.html > dist/critical.css",
		"rm-html": "rm index.html",
		"prod": "yarn build && yarn html && yarn critical && yarn rm-html"
	},
	"keywords": [
		"Rollup",
		"Web App",
		"Starter",
		"Boilerplate"
	],
	"author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
	"repository": "https://github.com/scriptex/rollup-mpa",
	"bugs": {
		"url": "https://github.com/scriptex/rollup-mpa/issues",
		"email": "scriptex.bg@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"itscss": "1.3.0"
	},
	"devDependencies": {
		"@babel/core": "7.12.3",
		"@babel/preset-env": "7.12.1",
		"@three11/optisize": "1.3.0",
		"autoprefixer": "9.8.6",
		"create-pwa": "2.3.0",
		"critical": "2.0.5",
		"node-sass": "4.14.1",
		"npm-run-all": "4.1.5",
		"postcss": "8.1.2",
		"postcss-flexbugs-fixes": "4.2.1",
		"postcss-import": "12.0.1",
		"postcss-preset-env": "6.7.0",
		"postcss-scss": "3.0.2",
		"postcss-url": "8.0.0",
		"rollup": "2.32.0",
		"rollup-plugin-babel": "4.4.0",
		"rollup-plugin-browsersync": "1.3.1",
		"rollup-plugin-commonjs": "10.1.0",
		"rollup-plugin-eslint": "7.0.0",
		"rollup-plugin-node-resolve": "5.2.0",
		"rollup-plugin-postcss": "3.1.8",
		"rollup-plugin-replace": "2.2.0",
		"rollup-plugin-sass": "1.2.2",
		"rollup-plugin-sprite": "0.1.2",
		"rollup-plugin-stylelint": "1.0.0",
		"rollup-plugin-typescript": "1.0.1",
		"rollup-plugin-uglify": "6.0.4",
		"rollup-watch": "4.3.1",
		"stylelint": "13.7.2",
		"stylelint-config-recommended": "3.0.0",
		"stylelint-scss": "3.18.0",
		"ts-node": "9.0.0",
		"tslib": "2.0.3",
		"tslint": "6.1.3",
		"tslint-config-prettier": "1.18.0",
		"typescript": "4.0.3"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"main": "dist/main.js",
	"private": true
}
