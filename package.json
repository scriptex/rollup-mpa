{
	"name": "rollup-mpa",
	"version": "1.0.0",
	"description": "A starter template for web applications using Rollup as a module bundler",
	"keywords": [],
	"bugs": {
		"url": "https://github.com/scriptex/rollup-mpa/issues",
		"email": "hi@atanas.info"
	},
	"license": "MIT",
	"author": "Atanas Atanasov <hi@atanas.info> (https://atanas.info)",
	"funding": "https://github.com/sponsors/scriptex",
	"repository": {
		"type": "git",
		"url": "github:scriptex/rollup-mpa"
	},
	"scripts": {
		"clear": "rm -rf dist",
		"start": "export NODE_ENV=development && yarn clear && rollup -c -w",
		"build": "export NODE_ENV=production && yarn clear && rollup -c",
		"lint": "yarn lint:js && yarn lint:ts && yarn lint:css",
		"lint:js": "eslint './src/**/*.js'",
		"lint:ts": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'",
		"lint:css": "stylelint src/**/*.scss",
		"pwa": "create-pwa --icon=\"./src/images/favicon/icon.png\" --launch=\"./src/images/favicon/launch.png\"",
		"optisize": "optisize --src=\"./src/images\"",
		"html": "php index.php > index.html",
		"critical": "critical index.html > dist/critical.css",
		"rm-html": "rm index.html",
		"prod": "yarn build && yarn html && yarn critical && yarn rm-html"
	},
	"dependencies": {
		"itscss": "3.1.0"
	},
	"devDependencies": {
		"@babel/core": "7.28.5",
		"@babel/preset-env": "7.28.5",
		"@rollup/plugin-babel": "6.1.0",
		"@rollup/plugin-commonjs": "29.0.0",
		"@rollup/plugin-eslint": "9.2.0",
		"@rollup/plugin-node-resolve": "16.0.3",
		"@rollup/plugin-replace": "6.0.3",
		"@rollup/plugin-terser": "0.4.4",
		"@rollup/plugin-typescript": "12.3.0",
		"@three11/optisize": "3.0.1",
		"autoprefixer": "10.4.21",
		"browserslist": "4.27.0",
		"create-pwa": "2.7.0",
		"critical": "7.2.1",
		"eslint": "9.39.1",
		"postcss": "8.5.6",
		"postcss-cli": "11.0.1",
		"postcss-flexbugs-fixes": "5.0.2",
		"postcss-import": "16.1.1",
		"postcss-normalize": "13.0.1",
		"postcss-preset-env": "10.4.0",
		"postcss-scss": "4.0.9",
		"postcss-url": "10.1.3",
		"postcss-utilities": "0.8.4",
		"rollup": "4.53.1",
		"rollup-plugin-browsersync": "1.3.3",
		"rollup-plugin-postcss": "4.0.2",
		"rollup-plugin-sass": "1.15.3",
		"rollup-plugin-sprite": "0.1.2",
		"rollup-plugin-stylelint": "1.0.0",
		"rollup-watch": "4.3.1",
		"sass": "1.93.3",
		"stylelint": "16.25.0",
		"stylelint-config-recommended": "17.0.0",
		"stylelint-config-standard-scss": "16.0.0",
		"stylelint-no-unsupported-browser-features": "8.0.5",
		"stylelint-scss": "6.12.1",
		"tslib": "2.8.1",
		"tslint": "6.1.3",
		"tslint-config-prettier": "1.18.0",
		"typescript": "5.9.3"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	],
	"private": true
}
